<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/featurePanel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/showHide"
            android:layout_width="94dp"
            android:layout_height="90dp"
            android:background="@drawable/rounded_image_button"
            android:contentDescription="@string/focused_mode"
            app:srcCompat="@drawable/visibility_off_48px"
            app:layout_constraintBottom_toBottomOf="@id/featurePanel"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/Options"
            android:layout_width="94dp"
            android:layout_height="90dp"
            android:background="@drawable/rounded_image_button"
            android:contentDescription="@string/focused_mode"
            app:srcCompat="@drawable/file_export_48px"
            app:layout_constraintTop_toTopOf="@id/featurePanel"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/timeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:keepScreenOn="true"
        android:text="@string/defaultViewTime"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@id/featurePanel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/stats"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:id="@+id/stats"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/timeView"
        app:layout_constraintEnd_toStartOf="@id/buttonPanel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/todayCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total" />

        <TextView
            android:id="@+id/distraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/distraction" />

        <TextView
            android:id="@+id/completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/completed" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonPanel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/completedButton"
            android:layout_width="94dp"
            android:layout_height="90dp"
            android:background="@drawable/rounded_image_button"
            android:contentDescription="@string/task_completed"
            app:srcCompat="@drawable/completed"
            app:layout_constraintTop_toBottomOf="@id/startStopButton"
            app:layout_constraintBottom_toBottomOf="@id/buttonPanel" />

        <ImageButton
            android:id="@+id/startStopButton"
            android:layout_width="94dp"
            android:layout_height="90dp"
            android:background="@drawable/rounded_image_button"
            android:contentDescription="@string/start"
            app:srcCompat="@drawable/play_arrow_48px"
            app:layout_constraintTop_toBottomOf="@id/focusModeButton"
            app:layout_constraintBottom_toTopOf="@id/completedButton" />

        <ImageButton
            android:id="@+id/focusModeButton"
            android:layout_width="94dp"
            android:layout_height="90dp"
            android:background="@drawable/rounded_image_button"
            android:contentDescription="@string/focused_mode"
            app:srcCompat="@drawable/do_not_disturb_on_48px"
            app:layout_constraintTop_toTopOf="@id/buttonPanel"
            app:layout_constraintBottom_toTopOf="@id/startStopButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>
